[user]
  email = c@cooperrunyan.com
  name = cooperrunyan
  signingkey = ~/.ssh/id_ed25519.pub

[author]
  name = cooperrunyan
  email = c@cooperrunyan.com

[github]
  user = cooperrunyan

[init]
  defaultBranch = main

[core]
  editor = nvim
  filemode = false

[pull]
  rebase = true

[fetch]
  prune = true

[core]
  trustctime = false # Make `git rebase` safer on macOS
  precomposeunicode = false # Prevent showing files whose names contain non-ASCII symbols as unversioned.
  untrackedCache = true # Speed up commands involving untracked files such as `git status`.
  excludesFile = ~/.config/git/global.gitignore

[color]
  ui = auto
  branch = always
  diff = always
  interactive = always
  status = always

[url "https://www.github.com/"]
  insteadOf = "g:"

[alias]
  amend = commit --all --amend --reuse-message=HEAD
  unstage = reset --hard HEAD
  c = commit -am
  sm = submodule
  aa = add -A
  ch = checkout
  p = push
  b = branch
  db = branch -D
  yolo = !git commit -m \"(yolo) $(curl -s https://whatthecommit.com/index.txt)\"
  lg = log --graph --abbrev-commit --decorate --format=line

[gpg]
  format = ssh

[tag]
  gpgsign = true

[commit]
  gpgsign = true

[log]
  abbrevCommit = true
  decorate = short
  follow = true
  initialDecorationSet = all
  date = relative

[pretty]
  line = format:%C(bold blue)%h%C(reset) %C(bold green)%<(12,trunc)%an%C(reset): %<(55,trunc)%s %C(dim white)%ar%C(reset)%C(bold yellow)%d%C(reset)


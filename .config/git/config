[author]
  name = cooperrunyan
  email = c@cooperrunyan.com

[github]
  user = cooperrunyan

[init]
  defaultBranch = main

[core]
  editor = code --wait
  filemode = false

[pull]
  rebase = true

[fetch]
  prune = true

[core]
  trustctime = false
  precomposeunicode = false
  untrackedCache = true
  excludesFile = ~/.config/git/global.gitignore
	fsmonitor = true

[color]
  ui = auto
  branch = always
  diff = always
  interactive = always
  status = always

[url "https://www.github.com/"]
  insteadOf = "g:"

[url "https://www.github.com/cooperrunyan/"]
  insteadOf = "c:"

[alias]
  amend = commit --all --amend --reuse-message=HEAD
  unstage = reset --hard HEAD
  c = commit -am
  sm = submodule
  aa = add -A
  ch = checkout
  p = push
  b = branch
  db = branch -D
  yolo = !git commit -m \"(yolo) $(curl -s https://whatthecommit.com/index.txt)\"
  lg = log --graph --abbrev-commit --decorate --format=line
	staash = stash --all
	wdiff = diff --word-diff
	cf = config
	cfg = config --global
	ac = !git add -A && git commit -m

[gpg]
  format = ssh

[tag]
  gpgsign = true

[commit]
  gpgsign = true
  status = false

[log]
  abbrevCommit = true
  decorate = short
  follow = true
  initialDecorationSet = all
  date = relative

[pretty]
  line = format:%C(bold blue)%h%C(reset) %C(bold green)%<(12,trunc)%an%C(reset): %<(55,trunc)%s %C(dim white)%ar%C(reset)%C(bold yellow)%d%C(reset)

[push]
  autoSetupRemote = true
  default = current
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate

set $mod Mod1
font pango:RobotoMono Nerd Font 12

exec xrdb /etc/X11/xinit/.Xresources

set_from_resource $foreground foreground #a9b1d6
set_from_resource $background background #1a1b26
set_from_resource $cursorColor cursorColor #a9b1d6

set_from_resource $black color0 #1a1b26
set_from_resource $red color1 #f7768e
set_from_resource $green color2 #9ece6a
set_from_resource $yellow color3 #e0af68
set_from_resource $blue color4 #7aa2f7
set_from_resource $magenta color5 #bb9af7
set_from_resource $cyan color6 #7dcfff
set_from_resource $white color7 #a9b1d6
set_from_resource $gray color8 #414868
set_from_resource $lightred color9 #f7768e
set_from_resource $lightgreen color10 #9ece6a
set_from_resource $lightyellow color11 #e0af68
set_from_resource $lightblue color12 #7aa2f7
set_from_resource $lightmagenta color13 #bb9af7
set_from_resource $lightcyan color14 #7dcfff
set_from_resource $lightgray color15 #c0caf5

#                       border      background  text       indicator child_border
client.focused          $background $background $white     $background $background
client.unfocused        $background $background $gray      $black    $background
client.focused_inactive $background $background $gray      $black    $background
client.urgent           $background $red        $black     $black    $background

client.background = $background

gaps inner 0
gaps outer 0

default_border normal 0
hide_edge_borders both
smart_borders on

exec --no-startup-id xterm 

# Use Mouse+$mod to drag floating windows to their wanted position
# floating_modifier $mod

bindsym $mod+Return exec xterm 

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
# bindsym $mod+s split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+space layout splith
bindsym $mod+Shift+space layout tabbed 
# bindsym $mod+Shift+space layout tabbed 
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
# bindsym $mod+Shift+e exec "i3-msg exit"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar {
        #status_command i3status --config ~/.config/i3/i3status.conf
        status_command i3status 
        tray_output none
        colors {
            background $black
            statusline $white
            separator $gray

            #                  border      background text
            focused_workspace  $background $blue $black
            active_workspace   $background $background $white
            inactive_workspace $background $background $lightgray
            urgent_workspace   $background $red $black
        }
}

